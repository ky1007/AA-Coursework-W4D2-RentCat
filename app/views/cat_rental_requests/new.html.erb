<h1> Make a request to rent our cats!!! </h1>

<% if flash[:errors] %>
  <ul>
  <% flash[:errors].each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
<% end %>

<form action="<%= cat_rental_requests_url %>" method="POST">

  <label>Cat:
    <select name="cat_rental_request[cat_id]" />
      <option disabled selected>--Pick a cat--</option>
      <% Cat.all.each do |cat| %>
        <option value="<%= cat.id %>"> <%= cat.name %> </option>
      <% end %>
    </select>
  </label>

  <br>

  <label>Start date:
    <input type='date' name="cat_rental_request[start_date]">
  </label>

  <br>

  <label>end date:
    <input type='date' name="cat_rental_request[end_date]">
  </label>

  <br>

  <input type="submit" value="Make Rental Request" >
</form>
