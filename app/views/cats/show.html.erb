<h1>Information about <%= @cat.name %></h1>

<table>
  <tr>
      <th><h4>All about <%= @cat.name %></h4></th>
  </tr>
  <tr>
    <td> Age </td>
    <td> <%= @cat.age %> </td>
  </tr>
  <tr>
    <td> Birthday </td>
    <td> <%= @cat.birth_date %> </td>
  </tr>
  <tr>
    <td> Color </td>
    <td> <%= @cat.color %> </td>
  </tr>
  <tr>
    <td> Sex </td>
    <td> <%= @cat.sex %> </td>
  </tr>
  <tr>
    <td> Description </td>
    <td> <%= @cat.description %> </td>
  </tr>
</table>

<%= link_to "Edit this cat!", edit_cat_url(@cat) %>
